@{
    ViewBag.Title = "Home Page";
    var userAuthenticated = User.Identity.IsAuthenticated;
    var greeting = (userAuthenticated ? "Hi " + User.Identity.Name + "! " : string.Empty) + "Welcome to our products management";
}

    <div class="jumbotron">
        <h1>Products</h1>
        <p class="lead">@greeting</p>
        @if (userAuthenticated)
        {
            if (User.IsInRole("Admin"))
            {
                <a class="btn btn-default" href="@Url.Action("Persons", "Person", null)">User manage</a>
                <a class="btn btn-primary" href="@Url.Action("Persons", "Person", null)">Login history</a>
            }
            <button class="btn btn-warning" id="BtnLoginHistory">Products</button>
        }
    </div>

