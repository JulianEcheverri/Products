@model IEnumerable<Products.Entities.UserLogin>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="Logins" class="row">
    <div class="row text-center">
        <h2>Login History</h2>
    </div>
    <br />
    <div class="row">
        <table class="table table-hover table-bordered table-responsive" id="TableUsers">
            <thead>
                <tr class="text-left alert-info" ">
                    <th>User Name</th>
                    <th>Login Date</th>
                    <th>LogOut Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.User.UserName</td>
                        <td>@item.LoginDate</td>
                        <td>@(item.LogOutDate != null ? item.LogOutDate.Value.ToString() : "-")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>